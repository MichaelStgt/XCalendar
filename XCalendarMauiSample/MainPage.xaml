<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XCalendarMauiSample.MainPage"
             BackgroundColor="{DynamicResource SecondaryColor}"
             xmlns:xc="clr-namespace:XCalendarMauiSample"
             xmlns:Models="clr-namespace:XCalendarMauiSample.Models">

    <StackLayout>
        <xc:CalendarView x:Name="FancyCalendarView" NavigationBackgroundColor="{DynamicResource PrimaryColor}" SelectionType="Single" SelectionAction="Modify">
            <xc:CalendarView.DayTemplate>
                <DataTemplate x:DataType="{x:Type Models:CalendarDay}">
                    <xc:CalendarDayView CalendarView="{x:Reference FancyCalendarView}" DateTime="{Binding DateTime}" SelectedBackgroundColor="#512bdf" TodayBorderColor="#512bdf"/>
                </DataTemplate>
            </xc:CalendarView.DayTemplate>
        </xc:CalendarView>
    </StackLayout>
    
</ContentPage>
